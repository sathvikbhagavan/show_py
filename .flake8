[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs
# E203: whitespace before ':'
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator
ignore =
    E203,
    E501,
    W503
per-file-ignores =
    __init__.py:F401
